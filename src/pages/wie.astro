---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CTA from "../components/CTA.astro";
---

<BaseLayout title="Wie läuft das ab? – Repair Café Leonberg" description="Ablauf und Reparaturen finden Sie jetzt gebündelt.">
  <Header />

  <main class="bg-slate-100 py-12 md:py-16">
    <section>
      <div class="container">
        <div class="mx-auto max-w-3xl rounded-3xl bg-white p-8 text-center shadow-xl shadow-slate-900/5">
          <span class="inline-flex items-center gap-2 rounded-full bg-brand-50 px-4 py-1 text-xs font-semibold uppercase tracking-[0.2em] text-brand-700">
            Hinweis
          </span>
          <h1 class="mt-4 heading-sub">Ablauf & Reparaturen</h1>
          <p class="mt-3 text-sm text-slate-600">
            Die Schritte durchs Repair Café finden Sie jetzt direkt auf der Seite
            <a class="text-brand-700 underline-offset-4 hover:underline" href="/reparaturen#ablauf">Ablauf &amp; Reparaturen</a>.
          </p>
          <a
            href="/reparaturen#ablauf"
            class="mt-5 inline-flex items-center justify-center gap-2 rounded-full bg-[#DD714D] px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-[#c35a39]"
          >
            Zur Ablauf-Seite
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M13 5l7 7-7 7" /></svg>
          </a>
        </div>
      </div>
    </section>
  </main>

  <CTA />
  <Footer />
</BaseLayout>
