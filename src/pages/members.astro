---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "Mitgliederbereich – Repair Café Leonberg";
const pageDescription =
  "Interner Bereich für Mitglieder des Repair Café Leonberg.";
export const prerender = false;

const resourceLinks = [
  {
    title: "Mailservice",
    description:
      "Schreiben Sie personalisierte Mails an andere Mitglieder des Repair Cafés.",
    href: "/members/mailservice",
    external: false,
  },
  {
    title: "Google Drive (alle Unterlagen)",
    description: "Zentrale Ablage aller Dokumente im Drive.",
    href: "https://drive.google.com/drive/folders/1-ZFkI_RUBzL3EAEJnX7_576xpzTlQ_XA?usp=sharing",
    external: true,
  },
  {
    title: "Dienstplan",
    description: "Einsatzübersicht für die nächsten Termine.",
    href: "https://docs.google.com/spreadsheets/d/1CUYP-AT9NLqx8E8tE7M7DDfJfvGjCUW-/edit?usp=sharing&ouid=112698322874253366185&rtpof=true&sd=true",
    external: true,
  },
  {
    title: "Expertenliste",
    description: "Kontaktdaten und Schwerpunkte aller Reparatur-Teams.",
    href: "https://docs.google.com/spreadsheets/d/1PmrnsAJVbHDJI6215Yg8bpU3S66TqkZ4obMGa3OQnsQ/edit?usp=sharing",
    external: true,
  },
  {
    title: "Statistik",
    description: "Aktuelle Kennzahlen und Erfolgsquoten.",
    href: "https://docs.google.com/spreadsheets/d/1zXeonhnCz-ygmiyODonzL7vF8SOoWEnP/edit?usp=sharing&ouid=112698322874253366185&rtpof=true&sd=true",
    external: true,
  },
  {
    title: "Dokumentation / Hinweise für Administratoren",
    description: "Anleitungen und Hinweise für den Admin-Bereich.",
    href: "https://docs.google.com/document/d/1DZ1Rvc59yI8h4d7kfRuDDcOBc520j4txUD70dNA2Eh0/edit?usp=sharing",
    external: true,
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />

  <main class="bg-slate-100 py-12 md:py-16">
    <section>
      <div class="container">
        <div class="mx-auto max-w-3xl text-center">
          <span
            class="inline-flex items-center gap-2 rounded-full bg-white px-4 py-1 text-xs font-semibold uppercase tracking-[0.2em] text-slate-500 shadow-sm"
          >
            Interner Bereich
          </span>
          <h1 class="mt-5 heading-hero">Mitgliederbereich</h1>
          <p class="mt-3 text-base text-slate-600">
            Dieser Bereich steht ausschließlich aktiven Mitgliedern des Repair
            Café Leonberg zur Verfügung. Der Zugang ist per Browser-Login (Basic
            Auth) passwortgeschützt.
          </p>
        </div>
      </div>
    </section>

    <section class="mt-12">
      <div class="container">
        <div
          class="mx-auto max-w-4xl rounded-3xl bg-white p-10 shadow-xl shadow-slate-900/5"
        >
          <div class="text-center">
            <p
              class="text-lg font-semibold uppercase tracking-[0.25em] text-slate-400"
            >
              Interne Unterlagen
            </p>
            <p class="mt-6 text-sm text-slate-600">
              Über die folgenden Links gelangen Sie zu den aktuellen
              Google-Drive-Dokumenten.
            </p>
          </div>
          <div class="mt-10 grid gap-5 md:grid-cols-2">
            {
              resourceLinks.map((resource) => (
                <a
                  href={resource.href}
                  target={resource.external === false ? "_self" : "_blank"}
                  rel={
                    resource.external === false
                      ? undefined
                      : "noopener noreferrer"
                  }
                  class="group flex h-full flex-col justify-between rounded-2xl border border-slate-200 p-5 text-left shadow-sm transition hover:-translate-y-1 hover:border-brand-300 hover:shadow-lg"
                >
                  <div>
                    <div class="flex items-center justify-between gap-2">
                      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-400">
                        {resource.external === false
                          ? "Internes Tool"
                          : "Google Drive"}
                      </p>
                      {resource.badge && (
                        <span class="rounded-full bg-emerald-100 px-2 py-1 text-[10px] font-semibold uppercase tracking-[0.2em] text-emerald-700">
                          {resource.badge}
                        </span>
                      )}
                    </div>
                    <h3 class="mt-3 text-lg font-semibold text-slate-900 group-hover:text-brand-700">
                      {resource.title}
                    </h3>
                    <p class="mt-2 text-sm text-slate-600">
                      {resource.description}
                    </p>
                  </div>
                  <span class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-brand-700">
                    {resource.external === false
                      ? "Öffnen"
                      : "Öffnen (neuer Tab)"}
                    <svg
                      class="h-4 w-4"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="M5 12h14M13 5l7 7-7 7" />
                    </svg>
                  </span>
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
